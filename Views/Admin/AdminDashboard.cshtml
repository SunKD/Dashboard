@{
    ViewData["Title"] = "Admin Dashboard";
}
@model IEnumerable<Dashboard.Models.User>;

<div class="row">
    <div class="col-md-6">
        <h3>Manage Users</h3>
    </div>
    <div class="col-md-6 text-right">
        <a class="btn btn-primary" href="addNew" role="button">Add new</a>
    </div>
</div>
<table class="table table-striped text-center">
    <thead>
        <tr>
            <th class="text-center">ID</th>
            <th class="text-center">Name</th>
            <th class="text-center">Email</th>
            <th class="text-center">Created_at</th>
            <th class="text-center">User_Level</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach(var item in Model){
                <form action="Modify" method="POST">
                    <tr>
                        <td>@item.UserID</td>
                        <td><a href="show/@item.UserID">@item.FirstName @item.LastName</a></td>
                        <td>@item.Email</td>
                        <td>@item.Created_at.ToString("MMM dd yyyy")</td>
                        @if(item.UserLevel == 9){
                            <td>Admin</td>
                        }else{
                            <td>Normal</td>
                        }
                        <input type="hidden" name="userID" value=@item.UserID>
                        <td>
                            <input type="submit" value="Edit" name="modify">
                            <input type="submit" value="Delete" name="modify">
                        </td>
                    </tr>
                </form>
            }
        }
    </tbody>
</table>